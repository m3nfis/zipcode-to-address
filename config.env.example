# Postal Code Lookup API Configuration
# Modern Node.js 22+ & Express v5 Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Node.js 22+ Performance Configuration
NODE_OPTIONS="--max-old-space-size=4096"
UV_THREADPOOL_SIZE=16

# Database Configuration
DB_PATH=./data/postal_codes.duckdb

# Authentication
REFRESH_AUTH_TOKEN=your-secret-token-here-change-me

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=100

# Data Processing
CHUNK_SIZE=2000
MAX_RESULTS=20
FUZZY_SIMILARITY_THRESHOLD=0.7

# Background Processing
BACKGROUND_REFRESH_ENABLED=true

# Node.js 22+ Features
V8_COMPILE_CACHE_DIR=./cache
FORCE_COLOR=1 